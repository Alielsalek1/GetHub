{
  "ReverseProxy": {
    "Routes": {
      "userServiceRoute": {
        "ClusterId": "userServiceCluster",
        "Match": {
          "Path": "/users/{**catch-all}"
        }
      },
      "authServiceRoute": {
        "ClusterId": "authServiceCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "userServiceCluster": {
        "Destinations": {
          "userService": {
            "Address": "http://user-service:5082"
          }
        }
      },
      "authServiceCluster": {
        "Destinations": {
          "authService": {
            "Address": "http://auth-service:5085"
          }
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341",
          "batchPostingLimit": 50,
          "period": "00:00:02"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Service": "ApiGateway"
    }
  }
}
